<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MD_BMI_Calculator.MainPage"
             BackgroundColor="#F0F4FF">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="0">

            <!-- Header -->
            <Border BackgroundColor="#1A73E8"
                    Margin="-24,0,-24,0"
                    Padding="24,40,24,32"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="6">
                    <Label Text="BMI Calculator"
                           TextColor="White"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="Know your Body Mass Index"
                           TextColor="#C8DEFF"
                           FontSize="14"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Input Card -->
            <Border BackgroundColor="White"
                    Margin="0,28,0,0"
                    Padding="24"
                    Stroke="#E0E0E0"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="20">

                    <!-- Height Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Height (cm)"
                               TextColor="#555"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Border BackgroundColor="#F5F9FF"
                                Stroke="#D0E4FF"
                                StrokeThickness="1"
                                Padding="4,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry x:Name="HeightEntry"
                                   Placeholder="e.g. 170"
                                   PlaceholderColor="#B0C4DE"
                                   TextColor="#1A1A2E"
                                   FontSize="16"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Weight Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Weight (kg)"
                               TextColor="#555"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Border BackgroundColor="#F5F9FF"
                                Stroke="#D0E4FF"
                                StrokeThickness="1"
                                Padding="4,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Entry x:Name="WeightEntry"
                                   Placeholder="e.g. 65"
                                   PlaceholderColor="#B0C4DE"
                                   TextColor="#1A1A2E"
                                   FontSize="16"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Calculate Button -->
                    <Button Text="CALCULATE BMI"
                            BackgroundColor="#1A73E8"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="15"
                            CornerRadius="12"
                            HeightRequest="52"
                            CharacterSpacing="1"
                            Clicked="OnCalculateClicked"
                            Margin="0,8,0,0"/>

                </VerticalStackLayout>
            </Border>

            <!-- Result Card -->
            <Border x:Name="ResultCard"
                    BackgroundColor="White"
                    Margin="0,20,0,0"
                    Padding="24"
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    IsVisible="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">

                    <Label Text="YOUR RESULT"
                           TextColor="#1A73E8"
                           FontSize="12"
                           FontAttributes="Bold"
                           CharacterSpacing="1.5"/>

                    <!-- BMI Value -->
                    <Label x:Name="BmiValueLabel"
                           Text="--"
                           TextColor="#1A73E8"
                           FontSize="64"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <!-- BMI Category Badge -->
                    <Border x:Name="CategoryBadge"
                            Padding="20,10"
                            StrokeThickness="0"
                            HorizontalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label x:Name="CategoryLabel"
                               Text="--"
                               TextColor="White"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </Border>

                </VerticalStackLayout>
            </Border>

            <!-- Reset Button -->
            <Button x:Name="ResetButton"
                    Text="RESET"
                    BackgroundColor="Transparent"
                    TextColor="#1A73E8"
                    FontAttributes="Bold"
                    FontSize="14"
                    Margin="0,16,0,32"
                    IsVisible="False"
                    Clicked="OnResetClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>